---
import { Icon } from "astro-icon";
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<div class="w-full flex justify-center sticky top-0 left-0 z-10">
  <div class="flex max-w-5xl p-4 w-full gap-4">
    <div class="flex-grow flex gap-4 items-center">
      <a
        class="decoration-transparent hover:decoration-white underline-offset-4"
        href="/"
      >
        <h5 class="text-xs sm:text-sm">Home</h5>
      </a>
      <span>Â·</span>
      <a
        class="decoration-transparent hover:decoration-white underline-offset-4"
        href="/me"
      >
        <h5 class="text-xs sm:text-sm">About me</h5>
      </a>
    </div>
    <ThemeSwitcher />
    <a
      class="decoration-transparent h-full aspect-square hover:scale-125"
      href="https://github.com/mwolfart"
      target="_blank"
      rel="noreferrer"
      aria-label="Github"
    >
      <Icon name="grommet-icons:github" />
    </a>
    <a
      class="decoration-transparent h-full aspect-square hover:scale-125"
      href="https://www.linkedin.com/in/murilo-wolfart/"
      target="_blank"
      rel="noreferrer"
      aria-label="Linkedin"
    >
      <Icon name="grommet-icons:linkedin" />
    </a>
    <div class="relative h-full aspect-square">
      <button
        class="relative h-full w-full hover:scale-125 transition"
        id="mailBtn"
        aria-label="E-mail"
        transition:persist
      >
        <Icon name="grommet-icons:mail" />
      </button>
      <div
        id="mailPopup"
        class="flex items-center opacity-0 transition absolute top-10 right-0 w-fit px-2 rounded-lg h-full text-dark bg-white text-2xs font-semibold"
      >
        Copied!
      </div>
    </div>
  </div>
</div>
<script>
  document.querySelector("#mailBtn").addEventListener("click", () => {
    navigator.clipboard.writeText("mwolfart@gmail.com");
    const popup = document.querySelector("#mailPopup");
    popup.classList.add("opacity-full");
    setTimeout(() => {
      popup.classList.remove("opacity-full");
    }, 3000);
  });
</script>
