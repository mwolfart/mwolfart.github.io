---
const { src, alt } = Astro.props;
---

<div class="relative flex flex-col @lg:flex-row">
  <img
    src={src}
    alt={alt}
    class="visible h-32 w-full rounded-md @lg:hidden"
    />
  <img
    src={src}
    alt={alt}
    class="hidden @lg:block object-cover w-1/3"
  />
  <div class="py-4 @lg:py-0 @lg:px-4 @lg:w-2/3">
    <slot />
  </div>
</div>