---
import * as i18n from "../../constants/content.json"

const { name, years, proficiency } = Astro.props
const content = i18n.about
const proficiencyLevels = [content.proficiencyBasic, content.proficiencyModerate, content.proficiencyGood, content.proficiencyVeryGood, content.proficiencyExcellent]
---

<span class="group relative text-white text-xs font-semibold py-2 px-4 border border-white rounded-full hover:bg-white hover:text-lavender transition cursor-default">
    {name}
    {(years || proficiency) && (
        <div class="absolute hidden group-hover:flex flex-col left-0 top-10 h-fit bg-gray text-indigo text-2xs z-10 py-1 px-2 rounded-md whitespace-nowrap">
            {years && (<span>{content.yearsOfExperience.replace("{years}", years)}</span>)}
            {proficiency && (<span>{proficiencyLevels[proficiency - 1]}</span>)}
        </div>
    )}
</span>